<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_button_style_i"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_button_style_ii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actions only"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_button_style_iii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From resource - Simple"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_button_style_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From resource - Complex"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/main_text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:lines="1"
            android:textSize="@dimen/os_text_size"
            tools:text="@string/sky_debug_text" />
    </LinearLayout>

</ScrollView>
